/* pages/welcome/welcome.wxss */
.userinfo {
  /* 设置为弹性盒子 */
  display: flex;
  /* 设置为列对齐（垂直方向）*/
  flex-direction: column;
  /* 所有元素居中对齐 */
  align-items: center;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 40rpx;
  /* 设置图片边框为圆角 */
  border-radius: 50%;
}

.userinfo-nickname {
  font-family:'Franklin Gothic Medium';
  font-size: 32rpx;
  font-weight: bold;
}

.usermotto {
  font-family:'Franklin Gothic Medium';
  font-size: 22rpx;
  font-weight: bold;
  /* 文字垂直居中：设置为容器的高度 */
  line-height: 80rpx;
  color: #405f80;
}

.usermotto-container{
  /* 设置边框 */
  border: 1px solid #405f80;
  width: 200rpx;
  height: 80rpx;
  margin-top: 200rpx;
  /* 设置边框为圆角 */
  border-radius: 5px;
  text-align: center;
}

