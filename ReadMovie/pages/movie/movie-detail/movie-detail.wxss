@import '../star/star-template.wxss';

.container {
  display: flex;
  flex-direction: column;
  padding: 0;
}

.head-img {
  width: 100%;
  height: 320rpx;
  /* 模糊图片 */
  -webkit-filter: blur(20rpx);
}

.head-img-hover {
  width: 100%;
  height: 320rpx;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
}

.main-title {
  color: #fff;
  font-weight: bold;
  margin-top: 80rpx;
  margin-left: 40rpx;
  /* 文字间间距 */
  letter-spacing: 2px;
}

.sub-title {
  font-size: 28rpx;
  color: #fff;
  margin-left: 50rpx;
  margin-top: 90rpx;
}

.like {
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-left: 50rpx;
  text-align: center;
}

.highlight-font {
  color: #f21146;
  font-size: 26rpx;
  margin-right: 10rpx;
}

.plain-font {
  color: #fff;
  font-size: 26rpx;
  margin-right: 30rpx;
}

.movie-img {
  height: 238rpx;
  width: 175rpx;
  position: absolute;
  top: 160rpx;
  right: 40rpx;
}

.summary {
  width: 100%;
  margin-left: 100rpx;
  margin-top: 40rpx;
  color: #777;
  font-size: 29rpx;
}

.original-title {
  color: #1f3463;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.flex-row {
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
  width: 90%;
}

.mark {
  margin-right: 30rpx;
  /* 设置文本空白:不换行 */
  white-space: nowrap;
  color: #999;
}

.hr {
  margin-top: 45rpx;
  height: 1px;
  width: 100%;
  background-color: #d9d9d9;
}

.synopsis {
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}

.synopsis-font {
  color: #999;
  font-size: 30rpx;
  font-weight: bold;
}

.summary-content {
  font-size: 29rpx;
  margin-top: 20rpx;
  margin-right: 40rpx;
  /* 文字间间距 */
  letter-spacing: 1px;
}

.cast {
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}

.cast-font {
  color: #999;
  margin-bottom: 40rpx;
  margin-left: 30rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.cast-container {
  display: inline-flex;
  flex-direction: column;
  margin-bottom: 50rpx;
  margin-right: 40rpx;
  width: 170rpx;
  text-align: center;
  /* 设置文本空白，空白会被浏览器忽略 */
  white-space: normal;
}

.cast-imgs {
  width: 750rpx;
  /* 设置文本空白：不换行 */
  white-space: nowrap;
}

.cast-img {
  width: 170rpx;
  height: 210rpx;
}

.cast-name {
  margin: 10rpx auto 0;
  font-size: 25rpx;
  /* 设置文本换行，允许在单词内换行 */
  word-break: break-all;
}
