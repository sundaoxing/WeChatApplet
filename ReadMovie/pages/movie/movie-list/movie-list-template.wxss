@import '../movie-item/movie-item-template.wxss';
.movie-list-container{
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.inner-container{
  margin: 0 auto 20rpx;
}

.movie-head{
  padding: 30rpx 20rpx 22rpx;
}

.slogan{
  font-size: 26rpx;
  color: #000;
  font-weight: 600;
}

.more{
  float: right;
}

.more-text{
  font-size: 26rpx;
  vertical-align: middle;
  margin-right: 10rpx;
  color: #1f4ba5;
}

.more-img{
  width: 9rpx;
  height: 16rpx;
  vertical-align: middle;
}

.movies-container{
  display: flex;
  flex-direction: row;
}